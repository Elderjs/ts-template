{
  "name": "elderjs-ts-template",
  "version": "1.0.0",
  "description": "This is a project template for [Elder.js](https://elderguide.com/tech/elderjs/) apps. The template lives at https://github.com/elderjs/template and the Elder.js source is here: https://github.com/elderjs/elderjs",
  "main": "./build/build.js",
  "scripts": {
    "start": "npm run dev",
    "build": "run-s clean build:copy build:ts build:rollup build:html",
    "build:ts": "tsc -p tsconfig.json ",
    "build:rollup": "rollup -c",
    "build:html": "node ./build/build.js",
    "build:copy": "cpx \"src/**/*.!(ts)\" build",
    "clean": "node ./build/cleanPublic.js",
    "run:server": "NODE_ENV=production node --enable-source-maps ./build/server.js",
    "serve": "run-s clean build:copy build:ts build:rollup run:server",
    "dev": "npm run watch:pre && npm run watch:watch",
    "dev:rollup": "npm run watch:copy & npm run watch:ts & npm run watch:rollup",
    "watch:watch": " npm run watch:copy & npm run watch:ts & npm run watch:esbuild",
    "watch:pre": "npm run build:copy && npm run build:ts",
    "watch:esbuild": "node --enable-source-maps esbuild",
    "watch:copy": "cpx \"src/**/*.!(ts)\" build --watch",
    "watch:ts": "tsc -p tsconfig.json -w ",
    "watch:rollup": "rollup -c -w --no-watch.clearScreen"
  },
  "type": "module",
  "engines": {
    "node": ">= 12.10.0"
  },
  "dependencies": {
    "@elderjs/elderjs": "file:../elderjs",
    "@elderjs/plugin-browser-reload": "^1.3.2",
    "@elderjs/plugin-markdown": "^1.3.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "del": "^6.0.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "polka": "^0.5.2",
    "sirv": "^1.0.11",
    "svelte": "^3.38.3",
    "svelte-preprocess": "^4.10.6"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@babel/core": "^7.13.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/runtime": "^7.13.10",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "autoprefixer": "^10.2.5",
    "ava": "^4.2.0",
    "cpx": "^1.5.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.41.1",
    "ts-node": "^9.1.1",
    "typedoc": "^0.19.0",
    "typescript": "^4.7.2"
  },
  "files": [
    "index.js",
    "elderjs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Elderjs/template.git"
  },
  "keywords": [
    "svelte",
    "elderjs",
    "ssr",
    "static",
    "site",
    "generator",
    "seo",
    "ssg",
    "template",
    "partial",
    "hydration"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "extensions": [
        "ts"
      ],
      "rewritePaths": {
        "src/": "build/main/"
      },
      "compile": false
    },
    "files": [
      "!build/module/**"
    ]
  },
  "bugs": {
    "url": "https://github.com/Elderjs/template/issues"
  },
  "homepage": "https://github.com/Elderjs/template#readme"
}
